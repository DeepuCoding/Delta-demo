<% layout("/layouts/boilerplate") %>
<body>
    <br>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <br>
    <form method="POST" 
      action="/listings/<%= listing._id %>?_method=PUT" 
      novalidate 
      class="needs-validation"
      enctype="multipart/form-data"
    >
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input value="<%= listing.title %>" name="listing[title]" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Please enter valid title
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea value="<%= listing.description %>"  
                      name="listing[description]"
                      cols="30" 
                      rows="10" 
                      class="form-control" 
                      required>
                      <%= listing.description %>
            </textarea>
            <div class="invalid-feedback">
                Please enter description !
            </div>
        </div>
        <div class="mb-3">
            Original listing Image <br>
            <img src="<%= orgImg %>">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input value="<%= listing.image %>" 
              name="listing[image]" 
              type="file"
              class="form-control"
            >
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input value="<%= listing.price %>" name="listing[price]" type="number" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter valid price
               </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input value="<%= listing.country %>" name="listing[country]" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter valid country
                </div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input value="<%= listing.location %>" name="listing[location]" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Please enter valid location
            </div>
        </div>

        <button class="btn btn-dark mb-3 edit-btn">Edit</button>
        
    </form>
  </div>
</div>
</body>